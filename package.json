{
  "name": "horadric-helper",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve src/demo.main.js",
    "build": "npm run build:poe",
    "test:unit": "vue-cli-service test:unit --passWithNoTests",
    "lint": "vue-cli-service lint",
    "lint:fix": "npm run lint --fix",
    "build:demo": "vue-cli-service build --inline-vue --name item-showcase src/demo.main.js",
    "build:poe": "vue-cli-service build --dest ./dist/poe --target lib --inline-vue --name poe-showcase src/path-of-exile/main.js",
    "start": "npm run serve"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "v-tooltip": "^2.1.3",
    "vue-custom-element": "^3.3.0"
  },
  "devDependencies": {
    "decode-html": "^2.0.0",
    "@types/jest": "^24.0.19",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-typescript": "^4.5.12",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^1.0.3",
    "babel-eslint": "^10.1.0",
    "bootstrap": "^4.6.0",
    "bootstrap-vue": "^2.21.2",
    "cheerio": "^1.0.0-rc.9",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^6.2.2",
    "lint-staged": "^9.5.0",
    "node-fetch": "^2.6.1",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "sass-loader": "^8.0.2",
    "typescript": "~4.1.5",
    "vue": "^2.6.12",
    "vue-template-compiler": "^2.6.11"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
